{
  "name": "olegv/wallkit",
  "description": "Библиотека готовых к использованию ui-компонентов на PHP с типизацией и композицией",
  "type": "library",
  "keywords": [
    "component",
    "ui",
    "template",
    "php",
    "brick",
    "компоненты"
  ],
  "homepage": "https://github.com/OlegVashkevich/wallkit",
  "license": "MIT",
  "authors": [
    {
      "name": "Oleg Vashkevich",
      "email": "ugluk@tut.by"
    }
  ],
  "require": {
    "php": ">=8.2",
    "ext-mbstring": "*",
    "olegv/brick": "dev-master"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1.33",
    "phpunit/phpunit": "^11.5",
    "phpstan/phpstan-strict-rules": "^2.0",
    "erusev/parsedown": "^1.7",
    "scrivo/highlight.php": "^9.18"
  },
  "autoload": {
    "psr-4": {
      "OlegV\\WallKit\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OlegV\\WallKit\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "fix-php": "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php",
    "fix-tpl": "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.template.php",
    "fix": [
      "@fix-php",
      "@fix-tpl"
    ],
    "test": "./vendor/bin/phpunit",
    "test-coverage": "./vendor/bin/phpunit --coverage-html coverage",
    "stan": "./vendor/bin/phpstan analyse --memory-limit 256M  -c phpstan.neon"
  },
  "suggest": {
    "scrivo/highlight.php": "Для подсветки синтаксиса в компоненте Code",
    "erusev/parsedown": "Для Markdown рендеринга"
  }
}
